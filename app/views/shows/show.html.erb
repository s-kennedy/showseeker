<div class="container">

	
	<h1><%= @show.band%></h1>
	<%= image_tag @show.pic.url(:large) %>
		<ul class="list-unstyled">
			<li><%= @show.description%></li>
			<li><%= @show.venue%>, <%= @show.city%></li>
			<li><%= @show.date%></li>
			<li><%= @show.price%> euros</li>
		</ul>

	<%= link_to("edit", edit_show_path(@show)) %>

	<ul> <% @comments.each do |comment| %>
		 <li><%= comment.name %>: "<%= comment.comment %>"</li>
		<%end%>
	</ul>

	<%= render 'shared/new_comment'%>
	<br><br>
</div>