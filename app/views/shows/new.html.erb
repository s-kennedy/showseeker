<div class="container">
	<div class="new_form">

		<% if @show.errors.any? %>
			<ul>
				<% @show.errors.full_messages.each do |message| %>
				<li><%=message%></li>
				<%end%>
			</ul>
		<%end%>

		<%= form_for [@show] do |f| %>

			<%= f.label :band %>
			<%= f.text_field :band %><br>

			<%= f.label :venue %>
			<%= f.text_field :venue %><br>

			<%= f.label :city %>
			<%= f.text_field :city %><br>

			<%= f.label :date %>
			<%= f.date_field :date %><br>

			<%= f.label :price %>
			<%= f.number_field :price %><br>

			<%= f.label :description %>
			<%= f.text_field :description %><br>

			<%= f.label :pic %>
			<%= f.file_field :pic %>

			<%= f.submit 'Save' %>
		<%end%>
	</div>
</div>
